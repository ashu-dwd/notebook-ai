generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:@localhost:3306/notebook-ai"
}


model User {
  id        Int      @id @default(autoincrement())
  name      String?
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  files     Files[]
  chats     Chats[]
}

model userData {
  userId    Int      @id @default(autoincrement())
  name      String?
  email     String   @unique
  password  String
  files     Files[]
  chats     Chats[]
}

model Files {
  fileId    Int      @id @default(autoincrement())
  userId    Int
  filePath  String
  vectorId  String
  chatId    String
  type      String?
  user      User?    @relation(fields: [userId], references: [id], map: "Files_userId_fkey")
  userData  userData? @relation(fields: [userId], references: [userId], map: "Files_userData_userId_fkey")
}

model Chats {
  chatId    Int      @id @default(autoincrement())
  userId    Int
  userMsg   String
  aiResponse String
  createdAt DateTime @default(now())
  user      User?    @relation(fields: [userId], references: [id], map: "Chats_userId_fkey")
  userData  userData? @relation(fields: [userId], references: [userId], map: "Chats_userData_userId_fkey")
}